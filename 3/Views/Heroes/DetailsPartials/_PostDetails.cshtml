@model ClassLibrary.Entities.Hero
@using ClassLibrary.Entities

@{
    string[] ExcludedFields = { "BeingID", "Being", "Item", "UserName" };
    var pocketsProperties = typeof(Pocket).GetProperties().Where(p => Array.IndexOf(ExcludedFields, p.Name) == -1).ToList();
    var routeValues = new RouteValueDictionary {
        { "id", Model.ID },
        { "list", Model.Pockets },
        { "properties", pocketsProperties },
        { "controller", "Heroes" },
        { "action", "Details" }
    };
}
<dt>
    @Html.DisplayNameFor(model => model.Pockets)
</dt>
<dd>

    @Html.Action("List", "Pockets", routeValues)
</dd>